{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "form-builder/input-field",
	"parent": ["form-builder/input-form"],
	"version": "0.1.0",
	"title": "Input Field",
	"category": "widgets",
	"icon": "smiley",
	"description": "Example block scaffolded with Create Block tool.",
	"example": {},
	"supports": {
		"html": false
	},
	"attributes": {
		"showLabel": {
			"type": "boolean",
			"default": true
		},
		"name": {
			"type": "string",
			"default": "spe-input-field"
		},
		"help": {
			"type": "string",
			"default": ""
		},
		"label": {
			"type": "string",
			"default": "Input"
		},
		"labelPosition": {
			"type": "string",
			"default": "top"
		},
		"placeholder": {
			"type": "string",
			"default": "Placeholder"
		},
		"type": {
			"type": "string",
			"default": "text"
		},
		"isRequired": {
			"type": "boolean",
			"default": true
		},
		"passwordToggle": {
			"type": "boolean",
			"default": false
		},
		"labelColor": {
			"type": "string",
			"default": "#000"
		},
		"helpColor": {
			"type": "string",
			"default": "#000"
		},
		"borderColor": {
			"type": "string",
			"default": "#e5e5e5"
		},
		"backgroundColor": {
			"type": "string",
			"default": "#fff"
		},
		"placeholderColor": {
			"type": "string",
			"default": "#000"
		}
	},
	"textdomain": "result-spark-engine",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js",
	"render": "file:./render.php"
}
